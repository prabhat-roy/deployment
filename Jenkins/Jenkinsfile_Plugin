pipeline {
    agent any

    stages {
        stage('Git Checkout') {
            steps {
                script {
                    echo "ðŸ“¥ Checking out source code..."
                    checkout scm
                }
            }
        }

        stage('Install Jenkins Plugins') {
            steps {
                script {
                    def pluginInstaller = load 'groovy/install_jenkins_plugin.groovy'
                    pluginInstaller.installPlugins()
                }
            }
        }
    }
}