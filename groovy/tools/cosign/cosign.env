# cosign.env: Environment variables for Cosign in Jenkins pipeline

# Cosign Docker image and version
export COSIGN_IMAGE="sigstore/cosign:v1.8.0"  # The Docker image used to run Cosign

# Cosign Sign Image: Private Key & Repository Info
export COSIGN_KEY_PATH="/path/to/cosign/key"  # Path to the private key used for signing the image
export COSIGN_PUBLIC_KEY_PATH="/path/to/public/key"  # Path to the public key used for verifying signatures
export COSIGN_REPO="gcr.io/myproject/my-image"  # Docker registry and image name to sign

# Cosign Verification Options: Settings for verifying the image
export COSIGN_VERIFY_REPO="gcr.io/myproject/my-image"  # Docker registry and image name to verify

# Report File: Output JSON report for Cosign results
export COSIGN_REPORT_FILE="cosign_report.json"  # File name to store Cosign report in JSON format

# Cosign Container Registry Authentication: Optional for private registries
export COSIGN_REGISTRY_USERNAME="my-registry-username"  # Docker registry username
export COSIGN_REGISTRY_PASSWORD="my-registry-password"  # Docker registry password or token (preferably from Jenkins credentials)

# Optional: Additional options to skip certain checks
export COSIGN_OPTIONS="--skip-check CKV_AWS_34 --quiet"  # Example: Options for skipping specific checks or reducing verbosity

# Logging/Reporting Settings
export COSIGN_LOG_FILE="cosign.log"  # Optional: Path for logging Cosign operations
export COSIGN_DEBUG="true"  # Optional: Enable detailed debug output (default: false)
