pipeline {
    agent any

    environment {
        ENV_FILE_PATH = 'groovy/Deployment.env'
    }
    
    stages {
        stage('Load Environment Variables') {
            steps {
                script {
                    def envLoader = load 'groovy/LoadEnvVars.groovy'
                    def envVars = envLoader.loadEnv(ENV_FILE_PATH)

                    envVars.each { key, value ->
                        echo "[INFO] Setting ${key}=****"
                        env[key] = value
                    }
                }
            }
        }
    }
}