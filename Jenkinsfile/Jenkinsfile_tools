pipeline {
    agent any
    
    stages {

        stage('Git Checkout') {
            steps {
                script {
                    checkout scm
                    }
                }
            }
            stage('Load Environment Variables') {
            steps {
                script {
                    /def envFile = readFile('Deployment.env').split('\n')
                    def envUtil = load "groovy/EnvLoader.groovy"
                    def envVars = envUtil.loadEnvVars("Deployment.env")

                    // Inject into env
                    envVars.each { key, val ->
                        env[key] = val
                        echo "Injected: ${key}=${val}"
                    }
                }
            }
        }
        }
    }    
